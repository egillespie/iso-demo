{
  "name": "iso-demo",
  "version": "1.0.0",
  "private": true,
  "description": "Demonstrates how to create an isometric room with a moveable character in a browser with no frontend frameworks.",
  "author": "Erik Gillespie <erik.gillespie@gmail.com>",
  "scripts": {
    "dev": "parcel src/index.html --open",
    "lint:html": "htmlhint src/*.html",
    "lint:css": "stylelint src/**/*.css",
    "lint:js": "standard src/**/*.js tests/**/*.js",
    "lint": "run-s lint:*",
    "test:unit": "jest",
    "test": "run-s lint test:*",
    "build:dist": "parcel build src/index.html",
    "build": "run-s test build:dist"
  },
  "devDependencies": {
    "htmlhint": "^0.14.2",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-beta.2",
    "standard": "^16.0.3",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0"
  },
  "standard": {
    "env": ["jest"]
  }
}
